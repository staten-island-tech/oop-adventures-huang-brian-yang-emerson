import json

test = open("Characters.json", encoding="utf8")
test2 = open("Items.json", encoding="utf8")

data = json.load(test)
data2 = json.load(test2)

def ItemInfo(item):
    for i in data2:
        if i['Name'] == item:
            print(i['Name'])
            print(i['Population change'])
            print(i['Gold change'])
            print(i['Happiness change'])
            print(i['LUCK'])

for i in data:
    print()
    print(i['Name'])
    print(i['Chance'])

    items = i['Items']
    print(items)

    for e in range(len(items)):
        item = items[e]
        ItemInfo(item)